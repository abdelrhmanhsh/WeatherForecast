<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/alert_item_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:background="@drawable/list_item_background">

    <TextView
        android:id="@+id/alert_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/alert_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/alert_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/alert_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/alert_start_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/alert_start_time"
        app:layout_constraintTop_toBottomOf="@id/alert_location"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/alert_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/alert_location"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintWidth_percent="0.25"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/alert_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/alert_end_date"
        app:layout_constraintStart_toEndOf="@id/space"
        app:layout_constraintWidth_percent="0.25"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:layout_marginStart="15dp" />

    <ImageView
        android:id="@+id/image_delete_alert"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>